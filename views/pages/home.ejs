<%- include('../partials/header') %>

<div class="container my-5">
  <!-- 검색어 입력창 -->
  <div class="row justify-content-center mb-4">
    <div class="col-md-8">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for restaurants or cuisines">
        <div class="input-group-append">
          <button class="btn btn-dark" type="button" onclick="window.location.href = '/search'">Search</button>
        </div>
      </div>
    </div>
  </div>

  <!-- 레스토랑 카드 섹션 -->
  <h3 class="mb-4 text-center">Recommended Restaurants</h3>
  <div class="row">
    <% const restaurants = [
      { img: 'images/돈가스.jpg', title: '헤키', info: '서울 마포구 동교로9길 33 1층 헤키', rating: 4.8 },
      { img: 'images/GTS버거.jpg', title: 'GTS버거 성수점', info: '서울 성동구 뚝섬로17가길 48 1층 GTS BURGER', rating: 4.9 },
      { img: 'images/pasta.jpg', title: '포노 부오노', info: '서울 강남구 도산대로45길 8-7 2층', rating: 4.7 },
      { img: 'images/하이디라오.jpg', title: '하이디라오 서초지점', info: '서울 서초구 서초대로77길 54 2층 하이디라오 훠궈', rating: 4.8 }
    ]; %>

    <% restaurants.forEach(restaurant => { %>
      <div class="col-md-3 mb-4">
        <div class="card">
          <img src="<%= restaurant.img %>" class="card-img-top" alt="<%= restaurant.title %>">
          <div class="card-body text-center">
            <h5 class="card-title"><%= restaurant.title %></h5>
            <p class="card-text"><%= restaurant.info %></p>
            <p class="text-warning">&#9733; <%= restaurant.rating %></p>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<style>
  .card-img-top {
    width: 250px;
    height: 200px;
    object-fit: cover;
  }
</style>

<%- include('../partials/footer') %>
