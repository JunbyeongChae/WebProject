<!-- views/pages/home.ejs -->

<%- include('../partials/header') %>

<!-- CSS 파일 포함 -->
<link rel="stylesheet" href="/stylesheets/style.css">

<div class="container my-5">
  <div class="row justify-content-center mb-4">
    <!-- 검색창과 콤보박스를 수평으로 배치 -->
    <div class="col-md-6 d-flex align-items-center">
      <!-- Select Region 콤보박스를 오른쪽으로 배치 -->
      <div class="d-flex justify-content-end col-md-3 col-4" style="margin-right: -10px;">
        <div class="form-group">
          <label for="region" class="font-weight-bold" style="margin-top: -15px;">Select Region</label>
          <select id="region" class="form-control" style="max-width: 120px;">
            <option>전체</option>
            <option>광명</option>
            <option>구로</option>
            <option>금천</option>
          </select>
        </div>
      </div>

      <!-- 검색어 입력창 -->
      <div class="col-md-9 col-8">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search for restaurants or cuisines">
          <div class="input-group-append">
            <button class="btn btn-dark" type="button" onclick="window.location.href = '/search'">Search</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

  <!-- 레스토랑 카드 섹션 -->
  <h3 class="mb-4 text-center">Recommended Restaurants</h3>
  <div class="carousel-wrapper position-relative">
    <button id="prevBtn" class="carousel-btn">❮</button>
    <div class="carousel-container">
      <div class="carousel-slide d-flex">
        <% const restaurants = [
          { img: 'images/돈가스.jpg', title: '헤키', info: '서울 마포구 동교로9길 33 1층 헤키', rating: 4.8 },
          { img: 'images/GTS버거.jpg', title: 'GTS버거 성수점', info: '서울 성동구 뚝섬로17가길 48 1층 GTS BURGER', rating: 4.9 },
          { img: 'images/pasta.jpg', title: '포노 부오노', info: '서울 강남구 도산대로45길 8-7 2층', rating: 4.7 },
          { img: 'images/하이디라오.jpg', title: '하이디라오 서초지점', info: '서울 서초구 서초대로77길 54 2층 하이디라오 훠궈', rating: 4.8 },
          { img: 'images/데이릿.jpg', title: '데이릿', info: '서울 성동구 상원1길 39 B1', rating: 4.5 } // 추가 카드 섹션
        ]; %>

        <% restaurants.forEach(restaurant => { %>
          <div class="card">
            <img src="<%= restaurant.img %>" class="home-card-img-top" alt="<%= restaurant.title %>">
            <div class="card-body text-center">
              <h5 class="card-title"><%= restaurant.title %></h5>
              <p class="card-text"><%= restaurant.info %></p>
              <p class="text-warning">&#9733; <%= restaurant.rating %></p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
    <button id="nextBtn" class="carousel-btn">❯</button>
  </div>
</div>

<%- include('../partials/footer') %>

<!-- client.js 모듈 가져오기 -->
<script type="module">
  import { initCarousel } from '/javascript/client.js';
  document.addEventListener('DOMContentLoaded', () => {
    initCarousel();
  });
</script>
