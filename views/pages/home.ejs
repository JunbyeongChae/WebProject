<!-- views/pages/home.ejs -->

<%- include('../partials/header') %>

<!-- CSS 파일 포함 -->
<link rel="stylesheet" href="/stylesheets/style.css">

<div class="container my-5">
  <div class="row justify-content-center mt-5">
    <!-- 검색창과 콤보박스를 수평으로 배치 -->
    <div class="col-md-8 d-flex align-items-center">
      <!--2025-01-07 이희범 폼으로 감싸서 값들이 GET 방식으로 전달되도록 설정 -->
      <form action="/search" method="GET" class="d-flex w-100">
        <!--2025-01-07 이희범 Select Region 콤보박스 -->
        <div class="form-group mr-2" style="margin-left: -5px;">
          <label for="region" class="font-weight-bold" style="margin-top: -40px;">Region</label>
          <select id="region" name="region" class="form-control" style="max-width: 120px;">
            <option value="광명시">광명시</option>
            <option value="구로구">구로구</option>
            <option value="금천구">금천구</option>
          </select>
        </div>

        <!--2025-01-07 이희범 Select Category 콤보박스 -->
        <div class="form-group mr-1" style="margin-right: 5px;">
          <label for="category" class="font-weight-bold" style="margin-top: -40px;">Category</label>
          <select id="category" name="category" class="form-control" style="max-width: 110px;">
            <option value="한식">한식</option>
            <option value="중식">중식</option>
            <option value="양식">양식</option>
            <option value="일식">일식</option>
            <option value="카페">카페</option>
          </select>
        </div>

        <!-- 검색어 입력창 -->
        <div class="flex-grow-1">
          <div class="input-group">
            <input type="text" name="query" class="form-control" placeholder="Search for restaurants or cuisines">
            <div class="input-group-append">
              <button class="btn btn-dark" type="submit">Search</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

  <!-- 레스토랑 카드 섹션 -->
  <h3 class="text-center mb-1">Recommended Restaurants</h3>
  <div class="carousel-wrapper position-relative mt-3">
    <button id="prevBtn" class="carousel-btn">❮</button>
    <div class="carousel-container">
      <div class="carousel-slide d-flex">
        <% const restaurants = [
          { img: 'images/돈가스.jpg', title: '오늘 돈카츠', info: '서울 금천구 가산디지털1로 171 가산SKV1센터 1층 103호'},
          { img: 'images/GTS버거.jpg', title: '왓더버거 가산직영점', info: '서울 금천구 가산디지털1로 181 119호' },
          { img: 'images/pasta.jpg', title: '미태리 한라원앤원점', info: '서울 금천구 가산디지털2로 101 1층 126호' },
          { img: 'images/하이디라오.jpg', title: '하이디라오 가산점', info: '서울 금천구 디지털로10길 9 현대아울렛 가산점 6층'},
          { img: 'images/데이릿.jpg', title: '오토김밥', info: '서울 금천구 가산디지털2로 101 1층 102호, 오토김밥 가산디지털점'} // 추가 카드 섹션
        ]; %>

        <% restaurants.forEach(restaurant => { %>
          <div class="card">
            <img src="<%= restaurant.img %>" class="home-card-img-top" alt="<%= restaurant.title %>">
            <div class="card-body text-center">
              <h5 class="card-title" style="font-weight: bold;"><%= restaurant.title %></h5>
              <p class="card-text"><%= restaurant.info %></p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
    <button id="nextBtn" class="carousel-btn">❯</button>
  </div>

<%- include('../partials/footer') %>

<!-- client.js 모듈 가져오기 -->
<script type="module">
  import { initCarousel } from '/javascript/client.js';
  document.addEventListener('DOMContentLoaded', () => {
    initCarousel();
  });
</script>

