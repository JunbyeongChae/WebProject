<!-- views/pages/home.ejs -->

<%- include('../partials/header') %>

<!-- CSS 파일 포함 -->
<link rel="stylesheet" href="/stylesheets/style.css">

<div class="container my-5">
  <div class="row justify-content-center mt-5">
    <!-- 검색창과 콤보박스를 수평으로 배치 -->
    <div class="col-md-8 d-flex align-items-center">
      <!--2025-01-07 이희범 폼으로 감싸서 값들이 GET 방식으로 전달되도록 설정 -->
      <!--250116 심유정 : 폼 id값 추가 -->
      <form id="searchForm" action="/search" method="GET" class="d-flex w-100">
        <!--2025-01-07 이희범 Select Region 콤보박스 -->
        <div class="form-group mr-2" style="margin-left: -5px;">
          <label for="region" class="font-weight-bold" style="margin-top: -40px;">Select Region</label>
          <select id="region" name="region" class="form-control" style="max-width: 120px;">
            <option value="광명시">광명시</option>
            <option value="구로구">구로구</option>
            <option value="금천구">금천구</option>
          </select>
        </div>

        <!--2025-01-07 이희범 Select Category 콤보박스 -->
        <div class="form-group mr-1" style="margin-right: 5px;">
          <label for="category" class="font-weight-bold" style="margin-top: -40px;">Select Category</label>
          <select id="category" name="category" class="form-control" style="max-width: 110px;">
            <option value="한식">한식</option>
            <option value="중식">중식</option>
            <option value="양식">양식</option>
            <option value="일식">일식</option>
            <option value="카페">카페</option>
          </select>
        </div>

        <!-- 검색어 입력창 -->
        <div class="flex-grow-1">
          <div class="input-group">
            <input type="text" name="query" class="form-control" placeholder="Search for restaurants or cuisines">
            <div class="input-group-append">
              <button class="btn btn-dark" type="submit">Search</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

  <!-- 레스토랑 카드 섹션 -->
  <h3 class="text-center mb-1">Recommended Restaurants</h3>
  <div class="carousel-wrapper position-relative mt-3">
    <button id="prevBtn" class="carousel-btn">❮</button>
    <div class="carousel-container">
      <div class="carousel-slide d-flex">
        <% const restaurants = [
          { img: 'images/돈가스.jpg', title: '헤키', info: '서울 마포구 동교로9길 33 1층 헤키'},
          { img: 'images/GTS버거.jpg', title: 'GTS버거 성수점', info: '서울 성동구 뚝섬로17가길 48 1층 GTS BURGER' },
          { img: 'images/pasta.jpg', title: '포노 부오노', info: '서울 강남구 도산대로45길 8-7 2층' },
          { img: 'images/하이디라오.jpg', title: '하이디라오 서초지점', info: '서울 서초구 서초대로77길 54 2층 하이디라오 훠궈'},
          { img: 'images/데이릿.jpg', title: '데이릿', info: '서울 성동구 상원1길 39 B1'} // 추가 카드 섹션
        ]; %>

        <% restaurants.forEach(restaurant => { %>
          <div class="card">
            <img src="<%= restaurant.img %>" class="home-card-img-top" alt="<%= restaurant.title %>">
            <div class="card-body text-center">
              <h5 class="card-title"><%= restaurant.title %></h5>
              <p class="card-text"><%= restaurant.info %></p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
    <button id="nextBtn" class="carousel-btn">❯</button>
  </div>

<%- include('../partials/footer') %>

<!-- client.js 모듈 가져오기 -->
<script type="module">
  import { initCarousel } from '/javascript/client.js';
  document.addEventListener('DOMContentLoaded', () => {
    initCarousel();
  });
</script>
<!-- 250116 심유정 : 로그인한 사용자인지 확인하기 위해 search.js 추가 -->
<script type="module" src="/javascript/search.js"></script>

