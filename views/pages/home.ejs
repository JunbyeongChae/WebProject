<%- include('../partials/header') %>

<div class="container my-5">
  <!-- 검색어 입력창 -->
  <div class="row justify-content-center mb-4">
    <div class="col-md-8">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for restaurants or cuisines">
        <div class="input-group-append">
          <button class="btn btn-dark" type="button" onclick="window.location.href = '/search'">Search</button>
        </div>
      </div>
    </div>
  </div>

  <!-- 레스토랑 카드 섹션 -->
  <h3 class="mb-4 text-center">Recommended Restaurants</h3>
  <div class="row">
    <% const restaurants = [
      { img: 'https://placehold.co/100x100', title: 'The Italian Corner', info: 'Italian • $$ • 1.2 miles', rating: 4.8 },
      { img: 'https://placehold.co/100x100', title: 'Sushi Master', info: 'Japanese • $$$ • 0.8 miles', rating: 4.9 },
      { img: 'https://placehold.co/100x100', title: 'Burger House', info: 'American • $ • 0.5 miles', rating: 4.7 },
      { img: 'https://placehold.co/100x100', title: 'Cafe Delight', info: 'Cafe • $ • 1.0 miles', rating: 4.6 },
      { img: 'https://placehold.co/100x100', title: 'The Grand Bistro', info: 'French • $$$ • 0.6 miles', rating: 4.8 }
    ]; %>

    <% restaurants.forEach(restaurant => { %>
      <div class="col-md-3 mb-4">
        <div class="card">
          <img src="<%= restaurant.img %>" class="card-img-top" alt="<%= restaurant.title %>">
          <div class="card-body text-center">
            <h5 class="card-title"><%= restaurant.title %></h5>
            <p class="card-text"><%= restaurant.info %></p>
            <p class="text-warning">&#9733; <%= restaurant.rating %></p>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include('../partials/footer') %>
