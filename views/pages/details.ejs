<%- include('../partials/header') %>

<div class="container my-5">
  <div class="row">
    <!-- 왼쪽 칸 -->
    <div class="col-md-4 d-flex flex-column">
      <h5>Store Details</h5>
      <!-- 상단: 가게 이미지 -->
      <div class="mb-3">
        <img src="https://placehold.co/600x400" alt="Store Image" class="img-fluid rounded">
      </div>
      <!-- 중간: 가게 정보 -->
      <div class="mb-3">
        <h5>Store Information</h5>
        <p><strong>Name:</strong> The Italian Corner</p>
        <p><strong>Address:</strong> 123 Main St, City</p>
        <p><strong>Contact:</strong> +123-456-7890</p>
        <p><strong>Opening Hours:</strong> 9:00 AM - 10:00 PM</p>
      </div>
      <!-- 하단: 메뉴 -->
      <div>
        <h5>Menu</h5>
        <ul class="list-group">
          <li class="list-group-item">Pasta - $12.99</li>
          <li class="list-group-item">Pizza - $10.99</li>
          <li class="list-group-item">Salad - $8.99</li>
          <li class="list-group-item">Tiramisu - $5.99</li>
        </ul>
      </div>
    </div>

    <!-- 중간 칸: 지도 -->
    <div class="col-md-4 mb-3">
      <h5>Location</h5>
      <div id="map" class="border rounded" style="height: 100%; background-color: #e9ecef;">
        <p class="text-center my-5">Map Area</p>
      </div>
    </div>

    <!-- 오른쪽 칸 -->
    <div class="col-md-4 d-flex flex-column">
      <h5>Reviews</h5>
      <!-- 상단부터 중간: 리뷰 목록 -->
      <div class="flex-grow-1 mb-3 overflow-auto border p-3 rounded" style="max-height: 400px;">
        <div class="mb-2 border-bottom pb-2">
          <strong>User1</strong>
          <p>Great food and excellent service!</p>
        </div>
        <div class="mb-2 border-bottom pb-2">
          <strong>User2</strong>
          <p>The pasta was fantastic. Highly recommend!</p>
        </div>
        <div class="mb-2 border-bottom pb-2">
          <strong>User3</strong>
          <p>Good place to visit with family.</p>
        </div>
      </div>
      <!-- 하단: 리뷰 입력 -->
      <div class="mt-auto">
        <h5>Add a Review</h5>
        <form>
          <div class="form-group mb-2">
            <textarea class="form-control" rows="3" placeholder="Write your review here"></textarea>
          </div>
          <button type="submit" class="btn btn-dark w-100">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
