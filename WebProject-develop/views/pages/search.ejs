<%- include('../partials/header') %>

<div class="container my-5">
  <div class="row">
    <!-- 왼쪽 칸 -->
    <div class="col-md-3 d-flex flex-column">
      <h5>Search</h5>
      <!-- 검색어 입력창과 버튼 -->
      <div class="mb-3">
        <input type="text" class="form-control mb-2" placeholder="음식점을 검색하세요" id="searchInput">
        <button class="btn btn-dark w-100" id="searchButton">Search</button>
      </div>
      <!-- 옵션 선택 콤보박스 -->
      <div>
        <label for="region" class="font-weight-bold">Select Region:</label>
        <select id="regionSelect" class="form-control">
          <option>광명시</option>
          <option>구로구</option>
          <option>금천구</option>
        </select>
      </div>
      <div>
        <label for="Category" class="font-weight-bold">Select Category:</label>
        <select id="categorySelect" class="form-control">
          <option>한식</option>
          <option>중식</option>
          <option>양식</option>
          <option>일식</option>
          <option>카페</option>
        </select>
      </div>
    </div>

    <!-- 중간 칸: 검색 결과 -->
    <div class="col-md-5 d-flex flex-column">
      <h5>검색 결과</h5>
      <!-- 검색 결과 스크롤 영역 -->
      <div class="border p-2 rounded flex-grow-1 overflow-auto" style="max-height: 600px;">
        <div class="row">
          
            <div class="col-md-6 mb-3">
              <div class="card">
                <a href="/details">
                  <img src="" class="card-img-top" alt="">
                </a>
                <div class="card-body text-center">
                  <h6 class="card-title"></h6>
                  <p class="card-text"></p>
                </div>
              </div>
            </div>
          
        </div>
      </div>
    </div>

    <!-- 오른쪽 칸: 지도 -->
    <div class="col-md-4">
      <h5>지도</h5>
      <div id="map" class="border rounded" style="height: 100%; background-color: #e9ecef;">
        <p class="text-center my-5">Map Area</p>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>

<script src="https://dapi.kakao.com/v2/maps/sdk.js?appkey=<%= javascriptKey %>&autoload=false&libraries=services"></script>
<script type="module" src="/javascript/search.js"></script>